{
  "name": "functions",
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "fmt": "prettier --write 'src/**/*.ts'",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && npx firebase emulators:start --only functions",
    "shell": "npm run build && npx firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npx firebase deploy --only functions:${name}",
    "logs": "npx firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "assert": "^2.1.0",
    "firebase-admin": "^12.4.0",
    "firebase-functions": "^5.1.0",
    "firebase-tools": "^13.15.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "firebase-functions-test": "^3.3.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "private": true
}
