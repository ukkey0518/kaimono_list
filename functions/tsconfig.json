{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "eslint.config.mjs",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}