rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /user_profiles/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /user_shopping_list_settings/{userId} {
      allow read, update: if isOwner(userId);

      // NOTE: Create & Delete are done by AdminSDK
    }

    match /shopping_lists/{shoppindListId} {
      allow create: if isAuthenticated();

      // TODO(Ukkey): ルールの実装 - メンバーの読み取り権限の実装
      //   - リスト共有機能の実装が必要
      allow read: if isOwner(resource.data.ownerUserId);

      allow update, delete: if isOwner(resource.data.ownerUserId);
    }
  }
}